{
    "name": "ImageNet_LT_RIDE4_le-0.1_cls5(40_80)_ga1.0_4",
    "n_gpu": 8,
    "gpus": [0,1,2,3,4,5,6,7],

    "arch": {
        "type": "ResNet50Model",
        "args": {
            "num_classes": 8142,
            "reduce_dimension": true,
            "use_norm": true,
            "returns_feat": true,
            "num_experts": 4
        }
    },

    "data_loader": {
        "type": "iNaturalistDataLoader",
        "args":{
            "data_dir": "....",
            "batch_size": 640,
            "shuffle": true,
            "num_workers":16
        }
    },
    "optimizer": {
        "type": "SGD",
        "args":{
            "lr": 0.2,
            "weight_decay": 2e-4,
            "momentum": 0.9,
            "nesterov": true
        }
    },
    "add_extra_info": true,
    "loss": {
        "type": "CRILoss",
        "scheduler":"cls",
        "args": {
            "additional_diversity_factor": -0.1,
            "reweight": true,
            "reweight_epoch_min": 50,
            "reweight_epoch_max": 80,
            "alpha":5,
            "gamma": 1.0,
            "beta": 200,
            "type": "zero",
            "gpus":[0,1,2,3,4,5,6,7],
            "reweight_factor": 0.5
        }
    },
    "metrics": [
        "accuracy"
    ],
    "lr_scheduler": {
        "type": "CustomLR",
        "args": {
            "step1": 60,
            "step2": 80,
            "gamma": 0.1,
            "warmup_epoch": 5
        }
    },

    "trainer": {
        "epochs": 100,
        "save_dir": "saved/",
        "save_period": 100,
        "verbosity": 2,
        "scheduler":"default",
        "epoch_min":30,
        "epoch_max":160,
        "monitor": "max val_accuracy",
        "tensorboard": false
    }
}
