{
    "name": "ImageNet_LT_RIDE4_le-0.1_cls5(40_80)_ga1.0_4",
    "n_gpu": 2,
    "gpus": [2,3],

    "arch": {
        "type": "ResNet10Model",
        "args": {
            "num_classes": 1000,
            "reduce_dimension": true,
            "use_norm": true,
            "returns_feat": true,
            "num_experts": 4
        }
    },

    "data_loader": {
        "type": "ImageNetLTDataLoader",
        "args":{
            "data_dir": "data/ImageNet_LT",
            "batch_size": 256,
            "shuffle": true,
            "num_workers": 16
        }
    },
    "optimizer": {
        "type": "SGD",
        "args":{
            "lr": 0.1,
            "weight_decay": 2e-4,
            "momentum": 0.9,
            "nesterov": true
        }
    },
    "add_extra_info": true,
    "loss": {
        "type": "CRILoss",
        "scheduler":"ppw",
        "args": {
            "additional_diversity_factor": -0.1,
            "reweight": true,
            "reweight_epoch_min": 40,
            "reweight_epoch_max": 80,
            "alpha":5,
            "gamma": 1.5,
            "beta": 50,
            "type": "zero",
            "gpus":[2,3],
            "reweight_factor": 0.02
        }
    },
    "metrics": [
        "accuracy"
    ],
    "lr_scheduler": {
        "type": "CustomLR",
        "args": {
            "step1": 60,
            "step2": 80,
            "gamma": 0.1,
            "warmup_epoch": 5
        }
    },

    "trainer": {
        "epochs": 100,
        "save_dir": "saved/",
        "save_period": 100,
        "verbosity": 2,
        "scheduler":"default",
        "epoch_min":30,
        "epoch_max":60,
        "monitor": "max val_accuracy",
        "tensorboard": false
    }
}
