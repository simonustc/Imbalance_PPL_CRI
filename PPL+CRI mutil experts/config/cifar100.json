{
    "name": "ImageNet_LT_RIDE4_le-0.1_cls5(40_80)_ga1.0_4",
    "n_gpu": 1,
    "gpus": [3],

    "arch": {
        "type": "ResNet32Model",
        "args": {
            "num_classes": 100,
            "reduce_dimension": true,
            "use_norm": true,
            "num_experts": 4
        }
    },

    "data_loader": {
        "type": "ImbalanceCIFAR100DataLoader",
        "args":{
            "data_dir": "data/ImageNet_LT",
            "batch_size": 128,
            "shuffle": true,
            "num_workers":8,
            "imb_type": "exp",
            "imb_factor": 0.01
        }
    },
    "optimizer": {
        "type": "SGD",
        "args":{
            "lr": 0.1,
            "weight_decay": 2e-4,
            "momentum": 0.9,
            "nesterov": true
        }
    },
    "add_extra_info": true,
    "loss": {
        "type": "CRILoss",
        "scheduler":"ppw",
        "args": {
            "additional_diversity_factor": -0.45,
            "reweight": true,
            "reweight_epoch_min": 40,
            "reweight_epoch_max": 140,
            "alpha":4,
            "gamma": 2.0,
            "beta": 200,
            "type": "zero",
            "gpus":[2],
            "reweight_factor": 0.05
        }
    },
    "metrics": [
        "accuracy"
    ],
    "lr_scheduler": {
        "type": "CustomLR",
        "args": {
            "step1": 120,
            "step2": 160,
            "gamma": 0.01,
            "warmup_epoch": 5
        }
    },

    "trainer": {
        "epochs": 100,
        "save_dir": "saved/",
        "save_period": 100,
        "verbosity": 2,
        "scheduler":"default",
        "epoch_min":30,
        "epoch_max":160,
        "monitor": "max val_accuracy",
        "tensorboard": false
    }
}
